        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="5dip" android:color="#ffffff" />
            <solid android:color="#bc2720"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="5dip" android:color="#ffffff" />
            <solid android:color="#bc2720"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="8dip" />
            <stroke android:width="5dip" android:color="#ffffff" />
            <solid android:color="#bc2720"/>
