<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:layout_gravity="left"
    android:layoutDirection="ltr"
    android:gravity="center_vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:paddingVertical="5dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/menu_main_drawer_item_parentgroup_iconmenu"
            android:layout_width="30dp" android:contentDescription="TODO"
            android:layout_height="30dp"
            android:layout_gravity="left|center_vertical"
            />
        <TextView
            android:id="@+id/menu_main_drawer_item_parentgroup_namemenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:paddingVertical="15dp"
            android:paddingHorizontal="15dp"
            android:layout_marginLeft="10dp"
            android:textSize="14dp"/>
        <ImageView
            android:id="@+id/menu_main_drawer_item_parentgroup_iconindicator"
            android:layout_width="10dp" android:contentDescription="TODO"
            android:layout_height="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="right|center_vertical"
            />

    </LinearLayout>
</LinearLayout>